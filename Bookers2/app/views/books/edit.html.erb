<div class="container">
  <div class="row">
    <div class="ml-1">
      <h2>Editing Book</h2>
        <%= form_with model: @book, local:true do |f| %>
        <label>Title</label><br>
          <%= f.text_field :title %><br>
        <label>Opinion</label><br>
          <%= f.text_area :body %><br>
        <button class="btn btn-success" type="submit">Update Book</button>
        <% end %>
    </div>
  </div>
</div>