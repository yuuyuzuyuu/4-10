<div class="container">
  <div class="row">

    <div class="col-lg-3">
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2>New Book</h2>
      <%= render 'books/new', book: @book %>
    </div>

    <div class="col-lg-9">
      <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">image</th>
              <th scope="col">Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %></td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>

  </div>
</div>