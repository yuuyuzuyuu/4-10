<%= render 'users/info', user: current_user %>
<%= render 'books/new', book: @book %>


<h2>Books</h2>
  <table class="books">
    <thead>
      <tr>
        <th>image</th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      <tr>
    </tbody>
  </table>
  <% end %>