<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
    <%= f.text_field :name, autofocus:true, id:"inputName", placeholder:"Name" %>
  <label for="inputIntoroduction">Introduction</label>
    <%= f.text_area :introduction, autofocus:true, id:"inputIntoroduction", placeholder:"Introduction" %>
    <%= f.submit "Update User" %>
<% end %>