<div class="container">
  <div class="row">

    <div class="col-lg-3">
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2>New Book</h2>
      <%= render 'books/new', book: @book %>
    </div>
    
      <div class="col-lg-9">
      <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>image</td>
              <td>
                  <%= link_to book.title, book, class: "book_#{book.id}" %>
              </td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    
  </div>
</div>